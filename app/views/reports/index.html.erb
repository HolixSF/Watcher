<div class='full_height_segment vertical_flex'>
	<div class="divider" id="anchor1">
			<div class="splash_container">
				<div class="item">
					<div class="tweet_splash s1">

					</div>
					<div>
						<p class='s1'>
							Recent tweets obtained through Twitter API
						</p>
					</div>
				</div>
				<div class="item arrow s2">
				</div>
				<div class="item">
					<div class="ibm_splash s3">

					</div>
					<div>
						<p class='s3'>
							Tone Analysis done by IBM Watson
						</p>
					</div>
				</div>
				<div class="item arrow s4">
				</div>
				<div class="item">
					<div class="uni_splash s5">

					</div>
					<div>
						<p class='s5'>
							Filtered by keywords and phrases backed by published research
						</p>
					</div>
				</div>
				<div class="item arrow s6">
				</div>
				<div class="item">
					<div class="theWatch_splash s7">

					</div>
					<div>
						<p class="s7">
							Surveillance report automatically generated by The Watch
						</p>
					</div>
				</div>
			</div>
	</div>

	<div class="report_container colored vertical_flex">
		<div class="center_icon">
			<div class="report_icon_background animated pulse infinite">
				<div class="report_icon"></div>
			</div>
		</div>
	</div>
	<div class="report_border_container">
		<div class="report_border">
			<div class="the_watch_list_title" id="watch_id">
				<h1>The Watch List Report</h1>
				<div class="headers_container">
					<div class="line_block">
						<p><%= Time.now.strftime("%m/%d/%Y") %></p>
					</div>
					<div class="line_block">
						<p>The Watch found: <%= @tweets.count %> people at risk</p>
					</div>
					<div class="line_block">
						<p> Average sadness level: 75%</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
