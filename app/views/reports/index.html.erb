	  			<button id='alert'>Send Alerts</button>
	  		</form>
	  	</div>
	  </div>
	</div>
</div>

<div class="segment_below_graph">
	<% @tweet_list.each_with_index do |t, i| %>
		<div class="tweet-item <%= i.even? ? 't-left' : 't-right' %>" >
			<div class="metweetright"></div>
			<h3 class="tweet-name"><%=t[:name]%></h3>
			<p class="tweet-handle"><%=t[:handle]%></p>
			<h2 class="tweet-content"><%=t[:content]%></h2>
		</div>
	<% end %>
</div>
