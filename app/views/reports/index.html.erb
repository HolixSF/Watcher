<div class="container">
	<div class="spalsh_image_container">
			<div class="center">
				<div class="title">
					<div class="phrase">
						<h1>
							Prevent
						</h1>
					</div>
					<script>
					$(function(){
						$(".phase_input").typed({
							strings: ["Violence", "Cyber Bullying", "Domestic Abuse", "Suicide"],
							typeSpeed: 10,
							startDelay: 0,
						});
					});
					</script>
					<div class="phrase-input">
						<span contenteditable="true" class="phase_input">Suicide</span>
					</div>
				</div>
				<div class="form_container">
					<script>
					$(function(){
						$("#search-box").click(function(){
							$("#search-box").typed({
								strings: ["I feel empty"],
								typeSpeed: 10,
								startDelay: 0,
							});
						});
					});
					</script>
					<form class="query-form hidden">
						<input id="search-box" type="text" name="query">
						<br>
						<button type="button" id="report_button">
							Get Report
						</button>
					</form>
				</div>
			</div>
	</div>
</div>
